@font-face
  font-family 'Proxima Nova Regular'
  src url('./fonts/proxima_nova_regular-webfont.eot')
  src url('./fonts/proxima_nova_regular-webfont.eot?#iefix') format('embedded-opentype'),
     url('./fonts/proxima_nova_regular-webfont.woff2') format('woff2'),
     url('./fonts/proxima_nova_regular-webfont.woff') format('woff'),
     url('./fonts/proxima_nova_regular-webfont.ttf') format('truetype'),
     url('./fonts/proxima_nova_regular-webfont.svg#proxima_nova_rgregular') format('svg')
  font-weight normal
  font-style normal

synapseBlue = #00ADD8
tailsYellow = rgb(255, 232, 0)

html
  body
    font-family "Proxima Nova Regular", "Helvetica Neue", Helvetica, Arial, sans-serif
    overflow-y scroll
    -webkit-overflow-scrolling touch

.splash
  text-align center
  margin 10% 0 0 0
  .message
    font-size 5em
    line-height 1.5em
    -webkit-text-shadow rgba(0, 0, 0, 0.5) 0 0 15px
    text-shadow rgba(0, 0, 0, 0.5) 0 0 15px
    text-transform uppercase
  .fa-spinner
    text-align center
    display inline-block
    font-size 5em
    margin-top 50px

.page-host
  position absolute
  left 0
  right 0
  top 50px
  bottom 0
  overflow-x hidden
  overflow-y auto
  padding-top 20px

section
  margin 0 20px

.navbar-nav
  li
    &.loader
      margin 12px 24px 0 6px

.pictureDetail
  max-width 425px

.winning-score
  h2
    font-weight bolder !important

.losing-score
  color #888

.current
  border-bottom 4px solid synapseBlue
  background linear-gradient(#eee, white)
  background linear-gradient(white, #eee)

.underline
  text-decoration underline

.heads:before, .heads-form:before
  background-color black
  width 25px
  height 25px
  position absolute
  left -20%
  top 40%
  content ''

.tails:before, .tails-form:before
  background-color tailsYellow
  border 1px solid #999
  width 25px
  height 25px
  position absolute
  left -20%
  top 40%
  content ''

.heads-form
  background-color black
  color white
  font-size 1.25em

.tails-form
  background-color tailsYellow
  font-size 1.25em

.heads-stepper
  background-color black
  color white
  font-weight bolder
  border 4px solid black
  .btn-expand
    background-color black

.tails-stepper
  background-color tailsYellow
  color black
  font-weight bolder
  border 4px solid #CDCDCD
  .btn-expand
    background-color tailsYellow

.btn-expand
  width 100%
  height 100%
  height 5.25em
  padding 0
  border-radius 10px
  i
    &.fa
      font-size 3em

.heads-stepper .btn-expand:hover, .heads-stepper .btn-expand:focus
  background-color #333
  color white

.tails-stepper .btn-expand:hover, .tails-stepper .btn-expand:focus
  background-color rgb(215, 197, 18)
  color black

.no-pad
  padding 0

@media(max-width 550px)
  .page-host
    top 30px
  .stepper
    h3, .h3
      font-size 18px

.no-pad-xs
  padding 0

.pad-bottom-1em
  padding-bottom 1em

.margin-top-1em
  margin-top 1em
  
.center-by-margin
  margin 0 auto
  
.score-flash
  background-color rgb(197, 51, 8)
  h2
    color white
    animation flash 1s linear infinite
  
@keyframes flash
 from 
   opacity 1.0
 to
  opacity 0.5



// Radio button hack
input[type=radio]
  position absolute
  top -9999px
  left -9999px

label[for="by-player"]
  cursor pointer
  text-align center
  font-family sans-serif
  font-size 14px
  font-weight 300
  color #aaa
  line-height 40px
  height 40px
  min-width 100px
  float left

label[for="by-team"]
  cursor pointer
  text-align center
  font-family sans-serif
  font-size 14px
  font-weight 300
  color #aaa
  line-height 40px
  height 40px
  min-width 100px
  float left

input#by-player[type=radio]:checked
  & ~ label[for="by-player"]
    border-bottom 5px solid synapseBlue
    font-weight bold
    color lighten(black, 20%)

input#by-team[type=radio]:checked
  & ~ label[for="by-team"]
    border-bottom 5px solid synapseBlue
    font-weight bold
    color lighten(black, 20%)

.flex-container
  display flex
  justify-content center
  align-items center
  
.flex-item
  display flex

.width-200
  width 200px

.table.text-center
  th
    text-align center

.sortable
  cursor pointer

.col-xs-12
  padding-right 50px
  @media (max-width: 992px)
    padding-left 0
    margin-left 5px
    padding-right 10px


// Overriding Bootstrap
.jumbotron
  width 100% !important
  margin-left 0  !important
  margin-right 0 !important
  padding-top 10px !important
  background-color transparent !important

.container
  width 100% !important
  padding 0 20px !important

h1, .h2
  font-size 1.75em

h2, .h2
  font-size 1.5em

h3, .h3
  font-size 1.25em

.navbar-brand
  padding 5px !important
  img
    border-radius 10px
    border 3px solid whitesmoke

.navbar-toggle
  background-color whitesmoke !important

.navbar-default .navbar-nav>.active>a, .navbar-default .navbar-nav>.active>a:focus, .navbar-default .navbar-nav>.active>a:hover
  color #555 !important
  background-color white !important

.row
  &.tall
    min-height 3.5em
  &.stepper
    font-weight bolder
    border-radius 15px
    margin-bottom 1em
    padding 0
    font-size 1.5em

.navbar-default
  background-color synapseBlue !important
  .navbar-brand
    color synapseBlue !important
  .navbar-toggle
    border-color whitesmoke !important
  .navbar-nav
    & > li
      & > a
        color white !important
        font-size 18px !important

.btn-primary
  background-color synapseBlue !important
  border-color #0294B8 !important

.btn-primary.active, .btn-primary.focus, .btn-primary:active, .btn-primary:focus, .btn-primary:hover, .open>.dropdown-toggle.btn-primary
  color white !important
  background-color #0097BD !important
  border-color #204d74 !important