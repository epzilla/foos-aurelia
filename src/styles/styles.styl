@font-face
  font-family 'Proxima Nova Regular'
  src url('./fonts/proxima_nova_regular-webfont.eot')
  src url('./fonts/proxima_nova_regular-webfont.eot?#iefix') format('embedded-opentype'),
     url('./fonts/proxima_nova_regular-webfont.woff2') format('woff2'),
     url('./fonts/proxima_nova_regular-webfont.woff') format('woff'),
     url('./fonts/proxima_nova_regular-webfont.ttf') format('truetype'),
     url('./fonts/proxima_nova_regular-webfont.svg#proxima_nova_rgregular') format('svg')
  font-weight normal
  font-style normal

html
  body
    font-family "Proxima Nova Regular", "Helvetica Neue", Helvetica, Arial, sans-serif
    overflow-y scroll
    -webkit-overflow-scrolling touch

.splash
  text-align center
  margin 10% 0 0 0
  .message
    font-size 5em
    line-height 1.5em
    -webkit-text-shadow rgba(0, 0, 0, 0.5) 0 0 15px
    text-shadow rgba(0, 0, 0, 0.5) 0 0 15px
    text-transform uppercase
  .fa-spinner
    text-align center
    display inline-block
    font-size 5em
    margin-top 50px

.page-host
  position absolute
  left 0
  right 0
  top 50px
  bottom 0
  overflow-x hidden
  overflow-y auto
  padding-top 20px

section
  margin 0 20px

.navbar-nav
  li
    &.loader
      margin 12px 24px 0 6px

.pictureDetail
  max-width 425px

.navbar-default
  background-color #00ADD8
  .navbar-brand
    color #00ADD8
  .navbar-toggle
    border-color whitesmoke
  .navbar-nav
    & > li
      & > a
        color white
        font-size 18px

.btn-primary
  background-color #00ADD8
  border-color #0294B8

.btn-primary.active, .btn-primary.focus, .btn-primary:active, .btn-primary:focus, .btn-primary:hover, .open>.dropdown-toggle.btn-primary
  color #fff
  background-color #0097BD
  border-color #204d74

.winning-score
  h2
    font-weight bolder !important

.losing-score
  color #888

.current
  border-bottom 4px solid #00ADD8
  background linear-gradient(#eee, white)
  background linear-gradient(white, #eee)

.underline
  text-decoration underline

.heads:before, .heads-form:before
  background-color black
  width 25px
  height 25px
  position absolute
  left -20%
  top 40%
  content ''

.tails:before, .tails-form:before
  background-color rgb(255, 232, 0)
  border 1px solid #999
  width 25px
  height 25px
  position absolute
  left -20%
  top 40%
  content ''

.heads-form
  background-color black
  color white
  font-size 1.25em

.tails-form
  background-color rgb(255, 232, 0)
  font-size 1.25em

.navbar-brand
  padding 5px
  img
    border-radius 10px
    border 3px solid whitesmoke

.navbar-toggle
  background-color whitesmoke

.navbar-default .navbar-nav>.active>a, .navbar-default .navbar-nav>.active>a:focus, .navbar-default .navbar-nav>.active>a:hover
  color #555
  background-color white

.row
  &.tall
    min-height 3.5em
  &.stepper
    font-weight bolder
    border-radius 15px
    margin-bottom 1em
    padding 0
    font-size 1.5em

.heads-stepper
  background-color black
  color white
  font-weight bolder
  border 4px solid black
  .btn-expand
    background-color black

.tails-stepper
  background-color rgb(255, 232, 0)
  color black
  font-weight bolder
  border 4px solid #CDCDCD
  .btn-expand
    background-color rgb(255, 232, 0)

.btn-expand
  width 100%
  height 100%
  height 5.25em
  padding 0
  border-radius 10px
  i
    &.fa
      font-size 3em

.heads-stepper .btn-expand:hover, .heads-stepper .btn-expand:focus
  background-color #333
  color white

.tails-stepper .btn-expand:hover, .tails-stepper .btn-expand:focus
  background-color rgb(215, 197, 18)
  color black

.no-pad
  padding 0

@media(max-width 550px)
  .page-host
    top 30px

.jumbotron
  width 100% !important
  margin-left 0
  margin-right 0
  padding-top 10px
  background-color transparent

.container
  width 100% !important
  padding 0 20px

h1, .h2
  font-size 1.75em

h2, .h2
  font-size 1.5em

h3, .h3
  font-size 1.25em

.no-pad-xs
  padding 0

