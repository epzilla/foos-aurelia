template
  nav.navbar.navbar-default.navbar-fixed-top(role='navigation')
    .container
      .navbar-header
        button.navbar-toggle(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
          span.sr-only Toggle Navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='#')
          img(src='img/snappy-foos.jpg', width='40', height='40')
      #bs-example-navbar-collapse-1.collapse.navbar-collapse
        ul.nav.navbar-nav
          li(class='${row.isActive ? \'active\' : \'\'}' repeat.for='row of router.navigation')
            a(href.bind='row.href') ${row.title}
        ul.nav.navbar-nav.navbar-right
          li.loader(if.bind='router.isNavigating')
            i.fa.fa-spinner.fa-spin.fa-2x
